<h1 class="text-center p-3">Edit Book</h1>

<form action="/books/edit/save" method="post">
<input type="hidden" name="id" value="{{book.id}}">
  <div class="container mt-4">
    <div class="mb-3 w-50 mx-auto">
      <label for="title" class="form-label">Book name</label>
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Title"
        value="{{book.title}}"
      />
    </div>

    <div class="mb-3 w-50 mx-auto">
      <label for="pages" class="form-label">Pages</label>
      <input
        type="text"
        class="form-control"
        name="pagesqty"
        placeholder="Number of pages"
        value="{{book.pagesqty}}"
      />
    </div>

  </div>
  <div class="d-flex justify-content-center mt-4">
    <input class="btn btn-primary btn-lg px-5" type="submit" value="confirm" />
  </div>
</form>