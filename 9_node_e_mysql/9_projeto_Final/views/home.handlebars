<h1 class="text-center p-3">Cadastro de Livros</h1>

<form action="/book/register" method="post">

  <div class="container mt-4">
    <div class="mb-3 w-50 mx-auto">
      <label for="title" class="form-label">Book name</label>
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="Title"
      />
    </div>

    <div class="mb-3 w-50 mx-auto">
      <label for="pages" class="form-label">Pages</label>
      <input
        type="text"
        class="form-control"
        name="pagesqty"
        placeholder="Number of pages"
      />
    </div>

  </div>
  <div class="d-flex justify-content-center mt-4">
    <input class="btn btn-primary btn-lg px-5" type="submit" value="Register" />
  </div>
  <div class="text-center p-5">
    {{#if sucess}}
      <p style="color: green;">{{sucess}}</p>
    {{/if}}
  </div>
</form>